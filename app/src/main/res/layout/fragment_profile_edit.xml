<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentProfileEdit">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <ImageView
            android:id="@+id/ivProfileEdit1"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:layout_margin="8dp"
            android:src="@drawable/ic_pic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            android:id="@+id/btnProfileEdit1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/main_theme"
            android:text="Change Image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivProfileEdit1" />

        <TextView
            android:id="@+id/tvProfileEdit1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnProfileEdit1" />

        <EditText
            android:id="@+id/etProfileEdit1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="start|center"
            android:textSize="16sp"
            android:inputType="textPersonName"
            android:hint="John Doe"
            android:autofillHints="name"
            android:background="@drawable/content_border"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_margin="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvProfileEdit1" />

        <TextView
            android:id="@+id/tvProfileEdit2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etProfileEdit1" />

        <EditText
            android:id="@+id/etProfileEdit2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="start|center"
            android:textSize="16sp"
            android:inputType="textEmailAddress"
            android:hint="john.doe@gmail.com"
            android:autofillHints="emailAddress"
            android:background="@drawable/content_border"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_margin="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvProfileEdit2" />

        <TextView
            android:id="@+id/tvProfileEdit3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="NIP"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etProfileEdit2" />

        <EditText
            android:id="@+id/etProfileEdit3"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="start|center"
            android:textSize="16sp"
            android:inputType="text"
            android:hint="1234536878941268"
            android:autofillHints="no"
            android:background="@drawable/content_border"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_margin="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvProfileEdit3" />

        <TextView
            android:id="@+id/tvProfileEdit4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Phone"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etProfileEdit3" />

        <EditText
            android:id="@+id/etProfileEdit4"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="start|center"
            android:textSize="16sp"
            android:inputType="phone"
            android:hint="+6281225598763"
            android:autofillHints="phone"
            android:background="@drawable/content_border"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_margin="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvProfileEdit4" />

        <Button
            android:id="@+id/btnProfileEdit2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/main_theme"
            android:text="Change Profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etProfileEdit4" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>